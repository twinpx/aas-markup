.b-float-label--file.invalid label a,
.b-float-label--file:active.invalid label a {
  color: #ff0000;
}

.b-float-label-file__label {
  position absolute
  top -23px
  left 15px
  font-size 0.69rem
  color #2b2b2b
  z-index 10
}
.b-float-label-file__close {
  position absolute
  top calc(50% - 8px)
  right 30px
  width 16px
  height 16px
  cursor pointer
  z-index 10
}
.b-float-label-file__close:before {
  content: '';
  display: block;
  height 20px
  border-left 2px solid #fff
  transform( rotate(45deg))
  position absolute
  top -2px
  left 7px
  z-index 10
}
.b-float-label-file__close:after {
  content: '';
  display: block;
  height 20px
  border-left 2px solid #fff
  transform( rotate(135deg))
  position absolute
  top -2px
  left 7px
  z-index 10
}