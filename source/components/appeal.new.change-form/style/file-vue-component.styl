/*File control*/
.b-float-label--file label span {
  color: #ea4420;
}

/*File*/
.b-float-label--file {
  position: relative;
  margin-bottom: 0;
}
.b-float-label--file svg {
  position: absolute;
  top: 12px;
  left: 20px;
  z-index: 10;
}
.b-float-label--file input {
  display: none;
}
.b-float-label--file label {
  display: block;
  background-color: #f0f5fc;
  background-size: 12px;
  font-size: 14px;
  height: 47px;
  line-height: 47px;
  padding: 0 20px 0 50px;
  border-radius: 5px;
  cursor: pointer;
  overflow: hidden;
  margin-bottom: 0;
}
.b-float-label--file label a {
  pointer-events: none;
  -webkit-transition: none;
  transition: none;
}
.b-float-label--file .a {
  fill: #c3cfdd;
}
.b-float-label--file .b {
  fill: #a3b2c1;
}
.b-float-label--file .c {
  fill: #d3e0ea;
}
.b-float-label--file .d {
  fill: #fff;
}
.b-float-label--file:hover .a {
  fill: #c335de;
}
.b-float-label--file:hover .b {
  fill: #a3b57e;
}
.b-float-label--file:hover .c {
  fill: #d3deee;
}
.b-float-label--file:hover .d {
  fill: #12daec;
}
.b-float-label--file:active .a,
.b-float-label--file.dragover .a,
.b-float-label--file.filled .a {
  fill: #fff;
}
.b-float-label--file:active .b,
.b-float-label--file.dragover .b,
.b-float-label--file.filled .b {
  fill: #a7bde8;
}
.b-float-label--file:active .c,
.b-float-label--file.dragover .c,
.b-float-label--file.filled .c {
  fill: #d0e0ff;
}
.b-float-label--file:active .d,
.b-float-label--file.dragover .d,
.b-float-label--file.filled .d {
  fill: #4375d8;
}
