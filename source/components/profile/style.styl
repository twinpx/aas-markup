@import '../../styl/component-include.styl'

.b-profile

  &.ph-block
    
    &.ph-block--animated
      
      .ph-content
        position static
        width auto
        opacity 1
        
      .ph
        position absolute
        top 0
        left 0
        width 100%
        opacity 0
        z-index -1
    
.b-profile
  
  &__photo
    background-color $line-color
    border-radius 10px
    height 200px
    position relative
    margin-bottom 110px

    i
      position absolute
      top 30px
      left 50%
      font-style  normal
      margin-left -119px
      border-radius 51%
      background-bg()
      width 236px
      height 236px
      z-index 1

      span
        position absolute
        top 148px
        left calc(50% - 170px / 2)
        right 0
        height 48px
        line-height 48px
        border-radius 24px
        text-align center
        color #fff
        font-size $16px
        width 170px
        z-index 2

      
  .b-collapse-block__head,
  .text-muted.small,
  .text-muted.small + p
    font-family $roboto
    
  .b-collapse-block__body
    padding-bottom 20px

@media print

  .b-collapse-block__head span,
  .b-profile__photo
    display none !important

  .b-collapse-block
    border-bottom none !important

    &__head
      padding 0 0 10px !important

      a
        text-decoration none
        color #000 !important
        opacity 1 !important

    &__body
      display block !important
      padding-bottom 0 !important

      .small
        font-size 1rem

      .text-muted
        color #000 !important
        font-weight bold
        margin 0 10px 0 0 !important
        float left
        line-height 1.2

      p
        color #000 !important
        margin 0 0 5px !important
        line-height 1.2

        &:after
          content ''
          display block
          clear both

      hr
        margin 0 !important

      .row
        margin-bottom 10px

  .b-report__date
    position static
    top auto
    right auto
    font-size .9rem
    color #000 !important
    margin-bottom 20px !important
