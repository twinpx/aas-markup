@import '../../styl/component-include.styl'

.b-form-auth,
.b-form-result

  &.ph-block
    
    &.ph-block--animated
      
      .ph-content
        position static
        width auto
        opacity 1
        
      .ph
        position absolute
        top 0
        left 0
        width 100%
        opacity 0
        z-index -1
    
.b-form-auth

  &__block
    border 1px solid $line-color
    padding 50px 0 60px

    .col-md-6
      padding 0 10%

  .invalid
    color #ff0000
    
  p.text-center
    margin-right auto
    margin-left auto
    
  h3
    margin 0 0 2rem

  .b-checkbox
    position relative

    label
      transition(opacity .3s ease)

    .circle-loader
      position absolute
      top 0
      left 0
      width 100%
      justify-content flex-start
      opacity 0
      transition(opacity .3s ease)
      z-index -1

    &.b-checkbox--loading
      
      label
        opacity 0

      .circle-loader
        opacity 1
        z-index 10

.b-form-result

  &__block
    border 1px solid $line-color
    padding 130px 50px

    h3
      max-width initial

    p
      max-width 750px
      margin 0 auto

#docToSignModal.modal
  height auto
  top 50%
  left 50%
  transform(translate(-50%, -50%))

  .modal-head
    text-align center
    padding 70px 20px 30px
    max-width 540px
    margin 0 auto

    @media(max-width 575px)
      padding-top 30px

      .close
        top 7px
        right 7px

    h3
      margin-bottom 0

  .modal-body
    width auto
    height 350px
    padding 0

    @media(max-width 575px)
      height 250px

    &__text
      margin-right 5px
      padding 0 15px 0 20px
      height 100%
      overflow auto
      scrollbar-color #ccc #fff
      scrollbar-width thin


      &::-webkit-scrollbar
          width: 4px
          height: 4px
          background-color #fff

      &::-webkit-scrollbar-thumb
          background-color #ccc
          border-radius 2px


      &::-webkit-scrollbar-thumb:hover
          background-color #c0c0c0


    p
      margin-bottom 0

    .progress-indicator
      display none

    &.modal-body--loading
      display flex
      justify-content center
      align-items center

      .progress-indicator
        display block

      .modal-body__text
        display none

  .modal-bottom
    font-size $12px
    max-width 490px
    margin 0 auto
    padding 30px 20px 40px 70px
    background-repeat no-repeat
    background-position 20px calc(50% - 5px)
    background-size 38px

#docToSignButton
  display block
  width 250px
  margin 50px auto