@import '../../styl/component-include.styl'

.b-news

  &.ph-block
    
    &.ph-block--animated
      
      .ph-content
        position static
        width auto
        opacity 1
        
      .ph
        position absolute
        top 0
        left 0
        width 100%
        opacity 0
        z-index -1
    
.b-news

  &__wrapper

    a
    
      &,
      &:hover,
      &:focus,
      &:active
        color #3b3b3b
        
  &__item
  
    .col-sm-6 &
      font-family $roboto
  
    &__data
      font-family $roboto
      