@import '../../styl/component-include.styl'

.b-poll

  &.ph-block
    
    &.ph-block--animated
      
      .ph-content
        position static
        width auto
        opacity 1
        
      .ph
        position absolute
        top 0
        left 0
        width 100%
        opacity 0
        z-index -1
    
.b-poll

  &-ill
    background-repeat no-repeat
    background-position center
    background-size cover
    height 500px
    border-radius 10px

  &__form-control
    border 1px solid #f5f5f5
    border-radius 10px
    padding 15px 40px 15px 20px
    display flex
    justify-content space-between
    align-items center
    cursor pointer

    &.i-active
      border-color #74C37A

    &__img
      width 80px
      height 80px
      border-radius 10px
      margin-right 20px
      background-repeat no-repeat
      background-position center
      background-size cover

    &__text
      margin-right 40px
      width calc( 100% - 80px - 20px - 40px - 40px)

      b
        display block
        font-size $18px
        margin-bottom 5px

      span
        display block
        font-size $14px


  &__checkbox
    position relative
    width 32px
    height 32px

    [type="checkbox"]:not(:checked),
    [type="checkbox"]:checked
      position absolute
      opacity 0
      pointer-events none

    [type="checkbox"]+span
      position relative
      padding-left 25px
      cursor pointer
      display block
      height 25px
      -webkit-user-select none
      -moz-user-select none
      -ms-user-select none
      user-select none

    [type="checkbox"].filled-in+span:before,
    [type="checkbox"].filled-in+span:after
      content: ''
      left: 0
      position: absolute
      transition( all .25s )
      z-index 1

    [type="checkbox"].filled-in:not(:checked)+span:before
      width 0
      height 0
      border 3px solid transparent
      left 10px
      top 14px
      transform( rotateZ(37deg))
      -webkit-transform-origin 100% 100%
      transform-origin 100% 100%

    [type="checkbox"].filled-in:not(:checked)+span:after
      height 32px
      width 32px
      background-color #f5f5f5
      border-radius 5px
      top 0px
      z-index 0

    [type="checkbox"].filled-in:checked+span:before
      top: 4px
      left: 4px
      width: 11px
      height: 17px
      border-top: 2px solid transparent
      border-left: 2px solid transparent
      border-right: 2px solid #fff
      border-bottom: 2px solid #fff
      -webkit-transform: rotateZ(37deg)
      transform: rotateZ(37deg)
      -webkit-transform-origin: 100% 100%
      transform-origin: 100% 100%

    [type="checkbox"].filled-in:checked+span:after
      top 0
      width 32px
      height 32px
      background-color #74C37A
      border-radius 5px
      z-index 0

  &__radio
    position relative
    width 32px
    height 32px

    [type="radio"]:not(:checked),
    [type="radio"]:checked
      position absolute
      opacity 0
      pointer-events none

      &+span
        position relative
        cursor pointer
        display block
        -webkit-transition .28s ease
        transition .28s ease
        -webkit-user-select none
        -moz-user-select none
        -ms-user-select none
        user-select none

        &:before,
        &:after
          content ''
          position absolute
          left 0
          top 0
          width 32px
          height 32px
          transition( .28s ease )
          z-index 0

    [type="radio"]:checked+span:after,
    [type="radio"].with-gap:checked+span:before,
    [type="radio"].with-gap:checked+span:after
      border 5px solid #74C37A

    [type="radio"]:not(:checked)+span:before,
    [type="radio"]:not(:checked)+span:after,
    [type="radio"]:checked+span:before,
    [type="radio"]:checked+span:after,
    [type="radio"].with-gap:checked+span:before,
    [type="radio"].with-gap:checked+span:after
      border-radius 50%

    [type="radio"].with-gap:checked+span:after
      transform( scale(0.4))

    [type="radio"]:checked+span:after,
    [type="radio"].with-gap:checked+span:after
      background-color #74C37A

    [type="radio"]:not(:checked)+span:before,
    [type="radio"]:not(:checked)+span:after
      border 5px solid #f5f5f5
      background-color #f5f5f5
