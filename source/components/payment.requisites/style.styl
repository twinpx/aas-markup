@import '../../styl/component-include.styl'

.b-payment-requisites

  &.ph-block
    
    &.ph-block--animated
      
      .ph-content
        position static
        width auto
        opacity 1
        
      .ph
        position absolute
        top 0
        left 0
        width 100%
        opacity 0
        z-index -1

  &-wrapper
    display flex
    flex-wrap wrap
    justify-content space-between

  &-item
    width calc(50% - 15px)
    border-radius 10px
    padding 25px 30px
    display flex
    justify-content space-between
    flex-direction column
    margin-bottom 30px

    @media(max-width 1024px)
      width 100%

  &-text
    margin-bottom 25px

  &-h3
    font-family $roboto
    font-size $24px
    font-weight $bold
    margin-bottom 12px
    line-height 1.2

  &-p
    font-size $14px

  &-footer
    display flex
    justify-content space-between
    align-items center

    @media(max-width 380px)
      display block

  &-price
    font-family $roboto
    font-weight $bold
    font-size $32px
    white-space nowrap

    @media(max-width 380px)
      margin-bottom 10px


