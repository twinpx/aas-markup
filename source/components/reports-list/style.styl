@import '../../styl/component-include.styl'

.b-reports-list

  &.ph-block
    
    &.ph-block--animated
      
      .ph-content
        position static
        width auto
        opacity 1
        
      .ph
        position absolute
        top 0
        left 0
        width 100%
        opacity 0
        z-index -1
    
.b-reports-list

  &__select
    width 250px

  &__item-content
    display grid
    grid-template-columns 1fr 250px
    grid-gap 30px
    margin-top 1rem

  &__item
    border 1px solid #74C37A
    border-radius 10px
    padding 18px 25px
    align-items center
    font-family $roboto

    &--new
      border-color #FAFAFA
      background-color #FAFAFA

    &--new-deadline
      border-color #FAFAFA
      background-color #FAFAFA

      .b-reports-list__date
        color $danger-color

    &--empty
      border-color #FFF4F4

      .b-reports-list__text
        color #3B3B3B55

        a,
        a:hover
          color #3B3B3B55

      .b-reports-list__date
        color $danger-color

    &--didnt-pass-year-period
      border-color #FFF4F4

      .b-reports-list__text
        color #3B3B3B55

      a.b-reports-list__title
      
        &,
        &:hover
          color #3B3B3B55

      .btn
        margin-bottom 9px

    &--didnt-pass
      border-color #FFF4F4

      .b-reports-list__text
        color #3B3B3B55

        a,
        a:hover
          color #3B3B3B55

    &--updated
      border-color #74C37A

    .b-reports-list__button.b-reports-list__button--right
      display flex
      align-items center
      justify-content flex-end
      justify-self end

      a
        margin-right 1rem

        &:last-child
          margin-right 0

    &--passed-year-period
      border-color #74C37A

    .b-reports-list__button.b-reports-list__button--center
      display flex
      flex-direction column
      justify-content center
      align-items center

    .btn-md
      margin-bottom 9px

    &--passed
      border-color #74C37A

    &--draft
      border-color #F0F0F0

      .b-reports-list__text
        color #3B3B3B55

        a,
        a:hover
          color #3B3B3B55

  &__year
    font-size $16px
    font-weight $bold
    min-height 1rem

  &__title
    display flex
    align-items center
    font-size $20px
    font-weight $bold
    line-height 1.2

  &__date
    margin-top .8rem
  
    &:not(.small)
      font-size $14px

    [class^="label-"]
      display inline-block
      margin-right 20px

  &__button
    justify-self center

    .btn
      display block
      width 100%

  @media(max-width 767px)

    &__select
      width auto

    &__item-content
      display block

      .b-reports-list__button
        margin-top 1rem

      &--updated
        
        .b-reports-list__button
          justify-content: center;

    &__date
      font-size $12px

    .b-reports-list__item &__button&__button--right
      justify-content space-between


.ik_select_dropdown
  width 250px !important