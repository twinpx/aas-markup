@import '../../styl/component-include.styl'

.b-widget-code

  &.ph-block
    
    &.ph-block--animated
      
      .ph-content
        position static
        width auto
        opacity 1
        
      .ph
        position absolute
        top 0
        left 0
        width 100%
        opacity 0
        z-index -1

.b-widget-code
  
  &-block
    background-color #F0F5FC
    border-radius 10px
    padding 30px
    position relative

    h4
      margin-top 0

    pre
      color #074C86

    .b-copy-icon
      width 16px
      height 16px
      background-repeat no-repeat
      background-position center
      background-size contain
      flex-shrink 0
      -webkit-transition( opacity .2s linear )
      transition( opacity .2s linear )
      opacity 0
      position absolute
      top 30px
      right 30px
      z-index 10

      @media(max-width 767px)
        opacity 1

      &__note
        position absolute
        background #fff
        border-radius 3px
        color #074C86
        font-family $roboto
        font-size $11px
        line-height 29px
        padding 0 10px
        white-space nowrap
        opacity 0
        -webkit-transition( opacity .2s linear )
        transition( opacity .2s linear )
        pointer-events none
        width 140px
        text-align center

        &.b-copy-icon__note--show
          opacity 1

    &:hover .b-copy-icon
      opacity 1


