@import '../../styl/component-include.styl'

.b-excerpts

  &.ph-block
    
    &.ph-block--animated
      
      .ph-content
        position static
        width auto
        opacity 0//1
        
      .ph
        position absolute
        top 0
        left 0
        width 100%
        opacity 1//0
        z-index 1//-1
    
.b-excerpts

  &__empty
    padding 1.25rem 1.5rem
    font-family $roboto
    min-height 78px
    display flex
    align-items center

    @media( max-width 575px )
      display block
      text-align center

  &__item
    border-bottom 1px solid $line-color
    display flex
    justify-content space-between
    align-items center
    padding 1.25rem 1.5rem
    font-family $roboto
    min-height 78px

    &:hover
      background-color #fcfcfc

    @media( max-width 575px )
      display block

  &__loader
    border-bottom 1px solid $line-color
    padding 1.25rem 1.5rem
    display flex
    justify-content space-between
    align-items center
    min-height 78px

    @media( max-width 575px )
      display block
      text-align center

      b
        display block
        margin-bottom 5px

  &__error
    border-bottom 1px solid $line-color
    padding 1.25rem 1.5rem
    color $danger-color

    @media( max-width 575px )
      display block

  &__head
    display flex
    justify-content space-between
    align-items center
    padding 1.25rem 1.5rem
    background-color #fafafa
    border-radius 10px

    .b-excerpts__title
      font-size $24px

    @media( max-width 575px )
      display block

  &__title
    font-weight $bold
    font-family $roboto
    margin-right 20px

    a
      display inline-block
      margin-right 20px

      @media( max-width 575px )
        display block
        margin-bottom 10px
        margin-right 0

    span 
      font-weight $normal

    @media( max-width 575px )
      margin-bottom 10px
      margin-right 0

  &__data
    font-size $16px
    font-family $roboto
    display flex
    justify-content flex-end
    align-items center

    @media( max-width 1100px )
      display block
      text-align right
      margin-right 0

    @media( max-width 575px )
      text-align left

      .b-excerpts__head &
        text-align center

  &__file
    display inline-block
    white-space nowrap
    padding-right 52px
    background-repeat no-repeat
    background-position right center
    background-size contain
    line-height 37px

    @media( max-width 1100px )
      text-align right
      margin-right 0
      margin-bottom 10px

    @media( max-width 575px )
      text-align left
      margin-bottom 0

  &__more
    position relative

    &__button
      display block
      width 32px
      height 32px
      border-radius 5px
      position relative
      background-color #F0F5FC
      background-repeat no-repeat
      background-position center
      background-size cover
      margin-left 35px

    &__files
      position absolute
      top calc( -54px / 2 - -32px / 2)
      right 42px
      box-shadow 0px 3px 6px #0000001A
      background-color #fff
      padding 11px 11px 11px 23px
      border-radius 7px
      display flex
      justify-content space-between
      align-items center
      opacity 0
      transition(opacity .3s ease)
      z-index -1

      &.show
        opacity 1
        z-index 1

      span
        font-size $12px
        white-space nowrap
        margin-right 14px

      a
        display inline-block
        white-space nowrap
        padding-left 34px
        background-repeat no-repeat
        background-position left center
        background-size contain
        line-height 32px
        margin-left 16px
        font-size $9px

.progress-indicator
  width 160px
  height 160px
  margin auto
  position relative

.item {
  width: 80px;
  height: 80px;
  position: absolute;
}

.item-1 {
  background-color: $primary-color;
  top: 0;
  left: 0;
  z-index: 1;
  animation: item-1_move 1.8s cubic-bezier(.6,.01,.4,1) infinite;
}

.item-2 {
  background-color: $secondary-color;
  top: 0;
  right: 0;
  animation: item-2_move 1.8s cubic-bezier(.6,.01,.4,1) infinite;
}

.item-3 {
  background-color: $primary-color-2;
  bottom: 0;
  right: 0;
  z-index: 1;
  animation: item-3_move 1.8s cubic-bezier(.6,.01,.4,1) infinite;
}

.item-4 {
  background-color: $secondary-color-2;
  bottom: 0;
  left: 0;
  animation: item-4_move 1.8s cubic-bezier(.6,.01,.4,1) infinite;
}

@keyframes item-1_move {
  0%, 100% {transform: translate(0, 0)} 
  25% {transform: translate(0, 80px)} 
  50% {transform: translate(80px, 80px)} 
  75% {transform: translate(80px, 0)} 
}

@keyframes item-2_move {
  0%, 100% {transform: translate(0, 0)} 
  25% {transform: translate(-80px, 0)} 
  50% {transform: translate(-80px, 80px)} 
  75% {transform: translate(0, 80px)} 
}

@keyframes item-3_move {
  0%, 100% {transform: translate(0, 0)} 
  25% {transform: translate(0, -80px)} 
  50% {transform: translate(-80px, -80px)} 
  75% {transform: translate(-80px, 0)} 
}

@keyframes item-4_move {
  0%, 100% {transform: translate(0, 0)} 
  25% {transform: translate(80px, 0)} 
  50% {transform: translate(80px, -80px)} 
  75% {transform: translate(0, -80px)} 
}

.circle-loader
  display flex
  justify-content flex-end
  align-items center
  height 37px

  @media( max-width 575px )
    justify-content center

.circle
  width 16px
  height 16px
  border-radius 50%
  margin 6px
  display flex
  justify-content center
  align-items center

  &:before
    content ""
    width 16px
    height 16px
    border-radius 50%
    opacity 0.7
    animation scale 2s infinite cubic-bezier(0, 0, 0.49, 1.02)

.circle-1
  background-color: #F2E4D8

  &:before
    background-color: #F2E4D8
    animation-delay: 200ms

.circle-2
  background-color: #F2E4D8

  &:before
    background-color: #F2E4D8
    animation-delay: 400ms

.circle-3
  background-color: #F2E4D8

  &:before
    background-color: #F2E4D8
    animation-delay: 600ms

.circle-4
  background-color: #F2E4D8

  &:before
    background-color: #F2E4D8
    animation-delay: 800ms

.circle-5
  background-color: #F2E4D8

  &:before
    background-color: #F2E4D8
    animation-delay: 1s

@keyframes scale
  0%
    transform scale(1)
  50%, 75%
    transform scale(2.5)
  78%, 100%
    opacity 0