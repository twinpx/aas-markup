@import '../../styl/component-include.styl'

.b-excerpts

  &.ph-block
    
    &.ph-block--animated
      
      .ph-content
        position static
        width auto
        opacity 1
        
      .ph
        position absolute
        top 0
        left 0
        width 100%
        opacity 0
        z-index -1
    
.b-excerpts

  &-person-card
    background-color $light-gray
    border-radius 10px
    padding 12px 20px
    display flex
    align-items center
    min-height 120px
    margin-bottom 2.5rem
    font-family $roboto

    &__placeholder
      margin-left 35px

    &__data
      display flex
      align-items center

    &__photo
      background-repeat no-repeat
      background-position center
      background-size contain
      border-radius 50%
      width 96px
      height 96px
      flex-shrink 0

    &__name
      font-size $16px
      font-weight bold
      margin-left 35px
      display inline-block

      @media(max-width 575px)
        margin-left 15px

    &__ornz
      font-size $16px
      margin-left 35px
      display inline-block

      b
        font-weight bold

      @media(max-width 575px)
        margin-left 15px

  &-search
    max-width 530px
    height 48px
    margin-bottom 2rem

  &-placeholder
    display flex
    justify-content space-between

    div
      background-color $light-gray
      padding-top calc((100% - 30px * 2) / 3 * .7)
      border-radius 10px
      width calc((100% - 30px * 2) / 3)

      @media(max-width 1250px)
        width calc((100% - 30px) / 2)
        padding-top calc((100% - 30px) / 2 * .7)

        &:nth-child(3)
          display none

      @media(max-width 676px)
        width 100%
        padding-top 70%

        &:nth-child(2),
        &:nth-child(3)
          display none

  &__empty
    padding 1.25rem 1.5rem
    font-family $roboto
    min-height 78px
    display flex
    align-items center

    @media( max-width 575px )
      display block
      text-align center

  &-items
    display flex
    justify-content space-between
    flex-wrap wrap

    &::after
      content ''
      width calc((100% - 30px * 2) / 3)

  &-item
    background-color $light-gray
    border-radius 10px
    width calc((100% - 30px * 2) / 3)
    min-height 279px
    padding 35px 30px 40px
    margin-bottom 30px

    @media(max-width 1250px)
      width calc((100% - 30px) / 2)

    @media(max-width 676px)
      width 100%

    &__title
      font-family $roboto
      font-size $18px
      font-weight bold
      margin-bottom 1.5rem
      text-align center
      min-height 65px
      line-height 1.2

    &__placeholder
      width 175px
      height 70px
      margin 0 auto 1.5rem
      background-repeat no-repeat
      background-position center
      background-size contain

    &__btn
      text-align center

  &__item
    position relative
    display flex
    justify-content space-between
    align-items center
    font-family $roboto
    margin-bottom 1.5rem

  &__loader
    display flex
    justify-content space-between
    align-items center
    height 70px
    margin 0 auto 1.5rem
    width 140px

    @media( max-width 575px )
      display block
      text-align center

      b
        display block
        margin-bottom 5px

  &__error
    color $danger-color
    margin-bottom 2.5rem

    @media( max-width 575px )
      display block

  &__title
    font-family $roboto
    line-height 1
    width 100%

    a
      font-size $14px
      font-weight $bold
      display block
      line-height 1.4

    span 
      font-size $10px
      font-weight $normal

  &__file
    background-repeat no-repeat
    background-position center
    background-size contain
    width 40px
    height 70px
    margin-right 15px
    flex-shrink 0

  &__more
    margin-left 20px
    flex-shrink 0

    &__button
      display block
      width 32px
      height 32px
      border-radius 5px
      position relative
      background-color #F0F5FC
      background-repeat no-repeat
      background-position center
      background-size cover

    &__files
      position absolute
      top -10px
      left 0
      box-shadow 0px 3px 6px #0000001A
      background-color #fff
      padding 30px 25px
      border-radius 7px
      align-items center
      opacity 0
      transition(opacity .3s ease)
      width 100%
      z-index -1

      &.show
        opacity 1
        z-index 1

      span
        font-size $12px
        margin-bottom 30px
        display block
        text-align center

      a
        display inline-block
        white-space nowrap
        padding-left 30px
        background-repeat no-repeat
        background-position left center
        background-size contain
        line-height 32px
        margin 0 8px
        font-size $9px

      &-wrapper
        display flex
        justify-content center
        align-items center

.progress-indicator
  width 160px
  height 160px
  margin auto
  position relative

.item {
  width: 80px;
  height: 80px;
  position: absolute;
}

.item-1 {
  background-color: $primary-color;
  top: 0;
  left: 0;
  z-index: 1;
  animation: item-1_move 1.8s cubic-bezier(.6,.01,.4,1) infinite;
}

.item-2 {
  background-color: $secondary-color;
  top: 0;
  right: 0;
  animation: item-2_move 1.8s cubic-bezier(.6,.01,.4,1) infinite;
}

.item-3 {
  background-color: $primary-color-2;
  bottom: 0;
  right: 0;
  z-index: 1;
  animation: item-3_move 1.8s cubic-bezier(.6,.01,.4,1) infinite;
}

.item-4 {
  background-color: $secondary-color-2;
  bottom: 0;
  left: 0;
  animation: item-4_move 1.8s cubic-bezier(.6,.01,.4,1) infinite;
}

@keyframes item-1_move {
  0%, 100% {transform: translate(0, 0)} 
  25% {transform: translate(0, 80px)} 
  50% {transform: translate(80px, 80px)} 
  75% {transform: translate(80px, 0)} 
}

@keyframes item-2_move {
  0%, 100% {transform: translate(0, 0)} 
  25% {transform: translate(-80px, 0)} 
  50% {transform: translate(-80px, 80px)} 
  75% {transform: translate(0, 80px)} 
}

@keyframes item-3_move {
  0%, 100% {transform: translate(0, 0)} 
  25% {transform: translate(0, -80px)} 
  50% {transform: translate(-80px, -80px)} 
  75% {transform: translate(-80px, 0)} 
}

@keyframes item-4_move {
  0%, 100% {transform: translate(0, 0)} 
  25% {transform: translate(80px, 0)} 
  50% {transform: translate(80px, -80px)} 
  75% {transform: translate(0, -80px)} 
}

.circle-loader
  display flex
  justify-content flex-end
  align-items center
  height 37px

  @media( max-width 575px )
    justify-content center

.circle
  width 16px
  height 16px
  border-radius 50%
  margin 6px
  display flex
  justify-content center
  align-items center

  &:before
    content ""
    width 16px
    height 16px
    border-radius 50%
    opacity 0.7
    animation scale 2s infinite cubic-bezier(0, 0, 0.49, 1.02)

.circle-1
  background-color: #F2E4D8

  &:before
    background-color: #F2E4D8
    animation-delay: 200ms

.circle-2
  background-color: #F2E4D8

  &:before
    background-color: #F2E4D8
    animation-delay: 400ms

.circle-3
  background-color: #F2E4D8

  &:before
    background-color: #F2E4D8
    animation-delay: 600ms

.circle-4
  background-color: #F2E4D8

  &:before
    background-color: #F2E4D8
    animation-delay: 800ms

.circle-5
  background-color: #F2E4D8

  &:before
    background-color: #F2E4D8
    animation-delay: 1s

@keyframes scale
  0%
    transform scale(1)
  50%, 75%
    transform scale(2.5)
  78%, 100%
    opacity 0