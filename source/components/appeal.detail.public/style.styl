@import '../../styl/component-include.styl'

.b-appeal-detail-public

  &.ph-block
    
    &.ph-block--animated
      
      .ph-content
        position static
        width auto
        opacity 1
        
      .ph
        position absolute
        top 0
        left 0
        width 100%
        opacity 0
        z-index -1

.b-appeal-detail-public

  @media (max-width: 575px)
    h3:first-child
      margin-top 0

  table.table
    margin-bottom 0

    th
      width 35%

    @media (max-width: 575px)
      th:nth-child(2),
      td:nth-child(2)
        display table-cell
  
.b-appeal-detail

  &__data
    background-color $light-gray
    border-radius 10px
    padding 30px

    h3:first-of-type
      margin-top 0

  &__file-card
    background-color #fff
    padding 0 30px 10px
    border-radius 10px

    &__title
      min-height 80px
      line-height 1.2
      display flex
      align-items center
      font-family $roboto
      font-weight $bold
      border-bottom 1px solid $line-color
      padding 5px 0
      margin-bottom 10px

.form-control-wrapper
  position relative

.form-control-select + label
  color #2b2b2b
  position absolute
  top 0
  left 15px
  font-size 0.69rem
  cursor text
  transition( transform 0.2s ease-out)
  transform-origin 0% 100%
  text-align initial
  transform( translateY(-22px))


.form-control-select .vs__dropdown-toggle {
  background-color: $form-control-color;
  border: 0;
  border-radius: 3px;
}
.form-control-select .vs__search, .form-control-select .vs__search:focus {
  height: 48px;
  margin: 0;
  padding: 0 15px;
  border: 0;
}
.form-control-select .vs__dropdown-toggle {
  padding: 0;
}
.form-control-select .vs__selected-options {
  padding: 0;
}
.form-control-select .vs__selected {
  position: absolute;
  pointer-events: none;
  margin: 0;
  padding: 0;
  border: 0;
  height: 48px;
  padding: 0 15px;
  font-size $14px
  z-index: 1;
}
.form-control-select input[type=search]:focus:not([readonly]) {
  border: 0 !important;
}
.form-control-select .vs__dropdown-menu {
  padding: 0;
  box-shadow: 0 5px 5px #eee;
  border: 0;
  border-radius: 0 0 5px 5px;
  font-size $14px
}
.form-control-select .vs__dropdown-option {
  line-height 24px
  padding 12px 15px
  white-space normal
	color: #3b3b3b;
  margin: 0;
}
.form-control-select .vs__dropdown-option:hover {
	cursor: pointer
}
.form-control-select .vs__dropdown-option--highlight {
	background: $form-control-color;
	color: #5F7696
}
.form-control-select .vs__clear {
  display: none !important;
}
.form-control-select input[type=search] {
  width: 0;
}
.form-control-select .vs__open-indicator {
  fill: transparent;
  width: 16px;
  height: 16px;
  background: url('https://auditor-sro.org/local/templates/aas/images/arrow-drop-down.svg') no-repeat center;
  background-size: cover;
}
.form-control-select .vs__actions {
  padding: 0 15px 0 3px;
}
.form-control-select .vs__search
  
  &,
  &:focus
    font-size $14px