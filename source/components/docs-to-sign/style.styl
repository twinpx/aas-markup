@import '../../styl/component-include.styl'

#docToSignModal.modal
  height auto
  top 50%
  left 50%
  transform(translate(-50%, -50%))

  .modal-head
    text-align center
    padding 70px 20px 30px
    max-width 540px
    margin 0 auto

    @media(max-width 575px)
      padding-top 30px

      .close
        top 7px
        right 7px

    h3
      margin-bottom 0

  .modal-body
    width auto
    height 350px
    padding 0

    @media(max-width 575px)
      height 250px

    &__text
      margin-right 5px
      padding 0 15px 0 20px
      height 100%
      overflow auto
      scrollbar-color #ccc #fff
      scrollbar-width thin


      &::-webkit-scrollbar
          width: 4px
          height: 4px
          background-color #fff

      &::-webkit-scrollbar-thumb
          background-color #ccc
          border-radius 2px


      &::-webkit-scrollbar-thumb:hover
          background-color #c0c0c0


    p
      margin-bottom 0

    .progress-indicator
      display none

    &.modal-body--loading
      display flex
      justify-content center
      align-items center

      .progress-indicator
        display block

      .modal-body__text
        display none

  .modal-bottom
    font-size $12px
    max-width 490px
    margin 0 auto
    padding 30px 20px 40px 70px
    background-repeat no-repeat
    background-position 20px calc(50% - 5px)
    background-size 38px

#docToSignButton
  display block
  width 250px
  margin 50px auto