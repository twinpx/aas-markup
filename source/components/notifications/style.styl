@import '../../styl/component-include.styl'

/*notification container*/
.nc
  position relative

/*notification*/
.notification
  background: radial-gradient(farthest-corner at top, #0110C4 0%, #FF8000 100%) top right/200% 200%;
  background-size: 400% 400%
  color: #fff
  display: flex
  justify-content: center
  align-items: center
  font-family: $roboto
  font-size: $14px
  line-height: 1.3
  height: 0
  overflow: hidden
  transition( height .5s ease-in-out )
  animation: gradient 10s ease infinite alternate
  position relative
  z-index 10

  &__content
    display flex
    justify-content center
    align-items center
    padding 0 40px

    @media(max-width 767px)
      font-size 12px
      padding 0 40px 0 15px

  &--top
    
    .notification__clear
      position absolute
      top calc(50% - 8px)
      right 35px
      cursor pointer
      transition( opacity .3s ease )
      z-index 1

      &:hover
        opacity .7

      @media(max-width 767px)
        right 15px

  &--inside
    animation-delay 2s
    border-radius 7px

    .notification__content
      width 100%
      justify-content space-between

  &--count
    margin 0 !important
    padding 0 !important
    position absolute !important
    height $16px !important
    opacity 0
    transition( opacity .5s ease-in-out )
    overflow visible
    z-index 2

    span
      background $danger-color !important
      border-radius 3px !important
      color #fff !important
      font-family $roboto
      font-weight $bold
      font-size $11px !important
      line-height $16px !important
      height $16px !important
      margin 0 !important
      padding 0 5px !important
      position absolute !important
      z-index 2

    .b-header__profile &
      top 0
      left 32px

      span
        top 7px
        right 0

    .b-left-menu &
      top 0
      left 0

      span
        top 2px
        right 0

  &--popup
    height auto
    padding 70px

    .notification__h3
      font-family $roboto
      font-size $24px
      font-weight $bold
      line-height 1.2
      margin-bottom 2rem
      letter-spacing -1px
      text-align center

    .notification__p
      text-align center
      margin-bottom 2rem

  &.notification--show

    &.notification--top
      display flex
      height: 70px

    &.notification--inside
      display flex
      height: 96px

    &.notification--count
      display flex
      opacity 1

  .btn
    
    &,
    &:hover,
    &.focus,
    &:focus,
    &.disabled,
    &:disabled
      color #fff
      background-color #ffffff44
      border-color transparent
      
    &.focus,
    &:focus
      box-shadow none

    &:not(:disabled):not(.disabled)

      &.active,
      &:active
        color #fff
        background-color #ffffff22
        border-color transparent

        &:focus
          box-shadow none

@keyframes gradient
	to
    background-position bottom left
    
