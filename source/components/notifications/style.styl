@import '../../styl/component-include.styl'

#top-alert
    background: transparent linear-gradient(90deg, #FF8000 25%, #0110C4 75%) 0% 0% no-repeat
    background-size: 200% 200%
    color: #fff
    display: flex
    justify-content: center
    align-items: center
    font-family: Roboto, Arial, serif
    font-size: 14px
    line-height: 1.3
    height: 0
    overflow: hidden
    transition( height .5s ease-in-out )
    animation: gradient 5s ease infinite

#top-alert.top-alert--show
    height: 70px

.top-alert__content
    padding: 0

@media(max-width: 991px)
    .top-alert__content
        font-size: 12px
    

@media(max-width: 767px)
    .top-alert__content
        padding-left: 30px

    .top-alert__content div
        display: none

    .top-alert__content span
        display: block

@keyframes gradient
	0%
		background-position 50% 0
	50%
		background-position 0% 0
	100%
		background-position 50% 0
    
