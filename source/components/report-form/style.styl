@import '../../styl/component-include.styl'

.b-report-form

  &.ph-block
    
    &.ph-block--animated
      
      .ph-content
        position static
        width auto
        opacity 1
        
      .ph
        position absolute
        top 0
        left 0
        width 100%
        opacity 0
        z-index -1
    
.b-report-form

  &__text
    position relative

  &__autosave-text
    position absolute
    top -42px
    right 0

    @media( max-width 767px )
      position static
      text-align right
      
  .b-collapse-block__head,
  .text-muted.small,
  .text-muted.small + p
    font-family $roboto
    
  .b-collapse-block__body
    padding-bottom 20px

  &__buttons
    display flex
    justify-content space-between
    align-items center

    div:first-child
      margin-right 50px
      white-space nowrap

    div:last-child
      line-height 1rem

    .btn
      margin-right 10px

      &:last-child
      
        span

          &:last-child
            display none

        &.return

          span

            &:first-child
              display none

            &:last-child
              display inline

    @media( max-width 991px )
      display block

      div:first-child
        margin-right 0
        margin-bottom .5rem
      