@import '../../styl/component-include.styl'

.b-report-form

  &.ph-block
    
    &.ph-block--animated
      
      .ph-content
        position static
        width auto
        opacity 1
        
      .ph
        position absolute
        top 0
        left 0
        width 100%
        opacity 0
        z-index -1
    
.b-report-form

  &__text
    position relative

  &__autosave-text
    position absolute
    top -42px
    right 0

    @media( max-width 767px )
      position static
      text-align right
      
  .b-collapse-block__head,
  .text-muted.small,
  .text-muted.small + p
    font-family $roboto

  .b-collapse-block
  
    &.invalid
      border-bottom-color $danger-color

  .b-collapse-block__head

    a
      justify-content flex-start
      align-items center
    
      i
        font-style normal

        &:first-child
          margin-right 50px

        &:last-child
          font-size $14px
          font-weight normal
          display none

      @media( max-width 991px )
        display block
        
        i

          &:first-child
            margin-right 0

          &:last-child
            margin-top 10px

  .b-collapse-block.invalid .b-collapse-block__head a i:last-child
    display inline

    @media( max-width 991px )
      display block
      
  .b-collapse-block__body
    padding-bottom 20px

  &__buttons
    display flex
    justify-content space-between
    align-items center

    div:first-child
      margin-right 50px
      white-space nowrap

    div:last-child
      line-height 1rem

    .btn
      margin-right 10px

      &:last-child
      
        span

          &:last-child
            display none

        &.return

          span

            &:first-child
              display none

            &:last-child
              display inline

    @media( max-width 991px )
      display block

      div:first-child
        margin-right 0
        margin-bottom .5rem

  &__submit
    display flex
    align-items center

    .btn
      margin-right 20px

    small
      display block

    @media( max-width 575px )
      display block

      small
        margin-top 10px

    &.valid
      
      small
        display none

  .bx-calendar
    font-family $roboto

  img.calendar-icon
    vertical-align top
    cursor pointer
    width 16px
    height 16px
    margin 0
    box-sizing content-box
    border 1px solid transparent
    position absolute
    top 16px
    right 16px
    opacity 0
    z-index 1

    &.show
      opacity 1

.b-complete-link
  white-space nowrap

  .icon
    display inline-block
    width 16px
    height 16px
    background-bg()
    margin-left 10px
    vertical-align text-bottom
    opacity 0
    transition( opacity .2s ease )

    @media( max-width 991px )
      display none

  &:hover

    .icon
      opacity 1

.b-staff-table

  table.table
    font-family $roboto

    &.hide
      display none

    th,
    td
      font-size $14px
      text-align center
      vertical-align middle
      border-top none
      border-bottom 1px solid $line-color
      cursor pointer

      &.asc,
      &.desc
        background-color #f2e4d866

      &:last-child
        padding-right 0
        text-align right

    th
      padding-right 35px
      padding-left 35px

      &.asc,
      &.desc
        color $secondary-color-2
        position relative

        &:before
          content ''
          width 17px
          height 17px
          border-radius 51%
          position absolute
          top 50%
          right 15px
          margin-top -8px
          background-color $secondary-color
          z-index 1

        &:after
          content ''
          width 5px
          height 5px
          border-right 1px solid #fff
          border-bottom 1px solid #fff
          transform( rotate( 45deg ))
          position absolute
          top 50%
          right 21px
          margin-top -3px
          z-index 2

      &.desc

        &:after
          transform( rotate( -135deg ))
          margin-top -1px

    td

      &:first-child
        text-align left

    tbody

      tr
        cursor pointer
        transition( all .3s ease )
      
        &:hover
          background-color #fcfcfc

        &.removing
          opacity 0
          transform( translateX( -100px ))
      