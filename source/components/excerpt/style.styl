b
  font-weight bold

u
  text-decoration underline

.note
  text-align center
  font-size 10pt
  font-style italic

table
  display table
  border-collapse collapse
  border 0
  box-sizing border-box
  text-indent initial
  width 800px

td
  font-family "Times New Roman", serif
  font-size 14pt
  line-height 1.2
  vertical-align top

tr.border

  td
    border 1px solid #000
    padding 10px

table.header
  margin-bottom 30px

table.h1
  margin-bottom 15px

  td
    text-align center
    font-weight bold

table.date-number
  margin-bottom 30px

  td.number
    text-align right

table.text
  margin-bottom 30px

  td

    &.fio,
    &.companyname
      border-bottom 1px solid #000
      font-weight bold
      text-align center
      padding-top 30px

table.certificate
  margin-bottom 10px

  td
    padding-bottom 15px

.ornz
  width 800px
  margin-bottom 30px
  font-family "Times New Roman", serif
  font-size 14pt
  line-height 1.2

  table
    width 500px
    margin 20px auto 0

    td
      border 1px solid #000
      padding 7px
      font-weight bold
      text-align center

table.membership
  margin-bottom 70px

  td
    padding-bottom 15px

table.company-membership
  margin-bottom 10px

  td
    padding-bottom 15px

table.signature

  td
    white-space nowrap
    width 200px
    vertical-align bottom

    &.occupation
      padding-right 30px

    &.signature
      border-bottom 1px solid #000

    &.fio
      padding-left 30px

.description
  width 800px
  margin-bottom 70px
  font-family "Times New Roman", serif
  font-size 14pt
  line-height 1.2

.table-data
  margin-bottom 30px

  td
    padding-top 20px
    padding-bottom 20px

  tr.border td
    padding-top 8px
    padding-bottom 8px

.issue-date
  width 800px
  margin-bottom 50px
  font-family "Times New Roman", serif
  font-size 14pt
  line-height 1.2