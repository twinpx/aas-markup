@import '../../styl/component-include.styl'

.b-protocol-block
  display block
  background-color #fafafa
  padding 40px
  border-radius 10px
  font-family $roboto

  h3:first-child
    margin-top 0

.b-protocol-doc
  display flex
  align-items center
  
  @media( max-width 767px )
    align-items flex-start

  &__icon
    width 40px
    height 50px
    background-repeat no-repeat
    background-position center
    background-size contain
    margin-right 15px
    margin-bottom 5px

  &__text
    width calc( 100% - 40px - 15px )
    
    a
      display inline-block
      margin-bottom 5px

  &__data
    display block
    
    span
      display inline-block
      vertical-align baseline
      white-space nowrap
      font-size $12px
      margin-right 30px
      line-height 30px
          
      @media( max-width 767px )
        margin-right 0
        display block