    &:hover,
    &.focus,
    &:focus,
    &.disabled,
    &:disabled
      color #3b3b3b
      background-color #f0f0f0
      border-color #f0f0f0
      
    &.focus,
    &:focus
      box-shadow none

    &:not(:disabled):not(.disabled)

      &.active,
      &:active
