    &.btn-light:not(:disabled):not(.disabled).active,
    &.btn-light:not(:disabled):not(.disabled):active
      background-color #FFF7F7
    
  &-lg
    line-height 60px
    height 60px
    font-size $16px
    min-width 250px
    
  &-md
    line-height 38px
    height 38px
    
  &-sm
    line-height 30px
    height 30px
    min-width 0
    padding 0 17px
    border-radius 3px
    font-weight $normal
    
  &-tag
    font-size: $12px
    font-weight normal
    height 28px
    line-height 28px
    min-width auto
    padding 0 8px
    background-color #fafafa
    border-radius 3px

    &,
    &:hover,
    &:focus,
    &:active
      color #9b9b9b

.btn--load-circle
  position relative

  &,
  &:hover,
  &:focus,
  &:active,
  &:not(:disabled):not(.disabled).active,
  &:not(:disabled):not(.disabled):active,
  & a
    color transparent !important

  &:after
    content ""
    position absolute
    height 30px
    width 30px
    top calc(50% - 15px)
    right calc(50% - 15px)
    animation circle 1.3s infinite linear 
    border 2px solid #fff
    border-radius 50%
    border-right-color transparent

@keyframes circle
  0%
    transform( rotate(0))
  100%
    transform( rotate(360deg))

.btn-delete
  display inline-block
  width 32px
  height 32px
  background-image url('images/btn-delete.svg');
  background-bg()
  cursor pointer
  transition( opacity .5s ease )

  button&
    border none

  &:hover
    opacity .7

//new style
.btn-remove
  display inline-flex
  justify-content center
  align-items center
  width 38px
  height 38px
  background #FAFAFA
  cursor pointer
  transition( background .3s ease )
  border-radius 10px

  button&
    border none

  svg

    path
      fill #9b9b9b
      transition( fill .3s ease )

  &:hover
  
    svg

      path
        fill #FF0000

  &:active
    background #FF0000
  
    svg

      path
        fill #fff

.btn-edit
  display inline-flex
  justify-content center
  align-items center
  width 38px
  height 38px
  background #FAFAFA
  cursor pointer
  transition( background .3s ease )
  border-radius 10px

  button&
    border none

  svg

    path
      fill none
      stroke #9b9b9b
      stroke-linecap round
      stroke-linejoin round
      stroke-width 1.5
      transition( fill .3s ease )

  &:hover
  
    svg

      path
        stroke #FF9300

  &:active
    background #FF9300
  
    svg

      path
        stroke #fff