@import '../../styl/component-include.styl'

.btn
  font-family $roboto
  font-weight 200
  font-size $12px
  line-height 48px
  height 48px
  border-radius 7px
  padding-top 0
  padding-bottom 0
  min-width 158px
  transition( all .5s ease )
  display inline-flex
  align-items center
  justify-content center
  white-space nowrap

  button&
    border none
    
  &:hover
    opacity .7

  .icon
    display inline-block
    width 24px
    height 24px
    background-bg()
    margin-right 10px
    vertical-align text-bottom

  &.btn-sm .icon
    width 16px
    height 16px
  
  &-primary
    
    &,
    &:hover,
    &.focus,
    &:focus,
    &.disabled,
    &:disabled
      background-color $primary-color
      border-color $primary-color
      
    &.focus,
    &:focus
      box-shadow none

    &:not(:disabled):not(.disabled)

      &.active,
      &:active
        background-color $primary-color
        border-color $primary-color

        &:focus
          box-shadow none
      
  &-secondary
    
