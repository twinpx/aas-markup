@import '../../styl/component-include.styl'

.b-breadcrumbs

  &.ph-block--animated
    
    &:after
      background-color transparent
      width auto
      opacity 0
      pointer-events none
      z-index 1

    a,
    span
      pointer-events auto
      opacity 1

  a,
  span
    display inline-block
    vertical-align top
    font-size $10px
    font-family $roboto
    margin-left 30px

    &:first-child
      margin-left 0

  span
    color #9b9b9b