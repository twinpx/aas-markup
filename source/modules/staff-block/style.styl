@import '../../styl/component-include.styl'

.b-staff-block

  h4
    margin 0 0 30px

  &__grid
    display flex
    justify-content space-between
    align-items flex-start
    flex-wrap wrap

    &:after
      content ''
      display block
      width calc((100% - 30px * 2) / 3)


  &__item
    background-color #FAFAFA
    border-radius 10px
    height 60px
    padding 5px 20px
    display flex
    justify-content flex-start
    align-items center
    width calc((100% - 30px * 2) / 3)
    margin-bottom 30px

  &__img
    width 32px
    height 32px
    border-radius 50%
    margin-right 20px
    background-repeat no-repeat
    background-position center
    background-size cover

  &__text
    white-space nowrap
    width calc(100% - 32px - 20px)
    text-overflow ellipsis
    overflow hidden

  @media(max-width 991px)
    
    &__grid:after,
    &__item
      width calc((100% - 30px) / 2)

  @media(max-width 575px)
    
    &__grid:after,
    &__item
      width 100%
    
    