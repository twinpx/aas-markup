@import '../../styl/component-include.styl'

.b-appeal

  &-wrapper
    display flex
    align-items stretch
    justify-content space-between
    flex-wrap wrap

    &:after
      content ''
      display block
      width calc((100% - 30px * 2) / 3)

      @media(max-width 1023px)
        width calc((100% - 30px) / 2)

    @media(max-width 575px)
      display block

  &-item
    background-color #FAFAFA
    padding 25px 25px 88px
    border-radius 10px
    width calc((100% - 30px * 2) / 3)
    position relative
    margin-bottom 30px

    @media(max-width 1023px)
      width calc((100% - 30px) / 2)

    @media(max-width 575px)
      width auto

    .btn
      position absolute
      bottom 25px
      left 25px
      z-index 1

  &-title
    font-size $20px
    font-weight $bold
    font-family $roboto
    margin-bottom 13px

  &-text
    font-size $14px
    min-height 82px
    margin-bottom 27px

  &-note
    font-weight $bold
    font-family $roboto
    min-height 21px