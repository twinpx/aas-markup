@import '../../styl/component-include.styl'

.b-docs-block
  display block
  border 1px solid $line-color
  padding 40px
  font-family $roboto
  
  @media( max-width 767px )
    padding 15px

  &__body
    display flex
    align-items center

  &__icon
    width 48px
    height 66px
    background-bg()
    margin-right 40px
    margin-bottom 47px
    
    @media( max-width 767px )
      width 24px
      height 33px
      margin-right 15px

  &__text
    width calc( 100% - 48px - 40px )
    
    a
      display inline-block
      margin-bottom 17px

  &__data
    display block
    
    span
      display inline-block
      white-space nowrap
      font-size $12px
      margin-right 30px
      line-height 30px
          
      @media( max-width 767px )
        margin-right 0
        display block
  
  .btn
  
    &,
    &:hover,
    &:focus,
    &:active
      color #9b9b9b !important
      
    &.active
      
      &,
      &:hover,
      &:focus,
      &:active
        color #f39442 !important
          
    @media( max-width 767px )
      display inline-block
      margin-top 7px
      
  &__collapsed
    margin-top 40px
    margin-left 88px
    display none
        
    @media( max-width 767px )
      margin-left 39px
    
    .b-docs-block
    
      &__item
        display flex
        align-items center
        margin-bottom 33px
        opacity 0
        transform( translateX( 50px ))
        transition( all .5s ease .7s )
        
        &:nth-child(1)
          transition-delay .3s
        
        &:nth-child(2)
          transition-delay .4s
        
        &:nth-child(3)
          transition-delay .5s
        
        &:nth-child(4)
          transition-delay .6s
      
      &__icon
        width 24px
        height 33px
        margin-right 20px
        margin-bottom 27px

      &__text
        width calc( 100% - 24px - 20px )
        font-size $11px
        
        a
          margin-bottom 12px

      &__data
        display block
        
        span
          font-size $10px
          
    &.active
      
      .b-docs-block
    
        &__item
          opacity 1
          transform( translateX(0))
