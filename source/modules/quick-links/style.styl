@import '../../styl/component-include.styl'

.b-quick-links
  height auto
  overflow visible
  opacity 1
  font-family $roboto

  a
    display flex
    justify-content space-between
    align-items center

  i
    width 80px
    height 80px
    background-bg()

  span
    width calc( 100% - 80px - 17px )
    font-size $12px
    line-height 14px
    color #9b9b9b

  b
    font-size $14px
    line-height 16px
    color #292929
    display block
    margin-bottom 13px