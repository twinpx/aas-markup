.b-header
  height 144px
  background-color #fff
  
  @media( max-width 576px )
    height 80px
  
  &-fixed-wrapper
    background-color #fff
    opacity 1
    
    @media( max-width 576px )
      position fixed
      top 0
      left 0
      width 100%
      z-index 1000
  
    .header-fixed &
      position fixed
      top -57px
      left 0
      width 100%
      z-index 1000
  
  &__top
  
    .container-lg
      border-bottom 1px solid #f2f2f2
      height 94px
      display flex
      justify-content space-between
      align-items center
      
  &__logo
    display flex
    justify-content flex-start
    align-items center
    
    img:first-child
      margin-right 20px
    
    span
      font-family $roboto
      font-size 9px
      font-weight $bold
      margin-right 37px
    
  &__profile
    
    a
      
      img
        width 50px
        height 50px
        border-radius 50%
        margin-right 20px
        
      span
        font-size $12px
        
    &-icon
      width 24px
      height 24px
      background-repeat no-repeat
      background-position center
      background-size cover
      margin-right 30px
  
  &__bottom
  
    .container-lg
      border-bottom 1px solid #f2f2f2
      height 50px
      display flex
      justify-content space-between
      align-items center
      transition( height .5s ease )
      position relative
      
      .header-fixed &
        height 40px
    
  &__menu
    transition( opacity .5s ease )
    
    a
      display inline-block
      margin-right 30px
      font-size $16px
      font-family $roboto
      font-weight $bold
      
      &:last-child
        margin-right 0
        
      &.active
        color $secondary-color
        opacity .7
        
    .b-header__bottom--search &
      opacity 0
        
    &-icon
      width 24px
      height 24px
      background-repeat no-repeat
      background-position center
      background-size cover
      
  &__search
    position absolute
    top 15px
    left calc( 100% - 20px )
    width 20px
    transition( all .5s ease )
    z-index 1000
        
    .b-header__bottom--search &
      left 0
      width 100%
    
    input
      display block
      border none
      width 100%
      height 20px
      line-height 20px
      padding 0 0 0 25px
      font-size $12px
      opacity 0
      transition( opacity .5s ease )
      
      &:focus
        border none !important
        outline none
        
      .b-header__bottom--search &
        opacity 1
    
  &__search-icon
    position absolute
    top 0
    left 0
    width 20px
    height 20px
    background-repeat no-repeat
    background-position center
    background-size cover
    z-index 1000
    
  &__dropdown
    position relative
    
    &-wrapper
      display none
      position absolute
      top 0
      left 0
      width 100%
      font-size $14px
      padding-top 35px
      padding-bottom 35px
      background-color #fff
      border-bottom 1px solid #f2f2f2
      z-index 1000
      
      [ data-dropdown ]
        display none
      
      &--show
        display block !important
      
    a
      margin-bottom 30px
      display block