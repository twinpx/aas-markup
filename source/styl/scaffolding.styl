.b-header
  height 144px
  background-color #fff
  
  @media( max-width 767px )
    height 86px
    
  .container-fluid
    position relative
    
  &.ph-block--animated
    overflow visible
    
    .container-fluid:before
      background-color #fff
      z-index -1
  
  &-fixed-wrapper
    background-color #fff
    transition( all .5s ease )
    position fixed
    top 0
    left 0
    width 100%
    z-index 994
    
    @media( min-width 768px )
  
      .header-fixed &
        top calc( -1 * ( 144px - 86px ))
  
  &__top
    border-bottom 1px solid $line-color
    height 94px
    display flex
    justify-content space-between
    align-items center
    transition( all .5s ease )
    
    .ph-block--animated &
      opacity 1
  
    @media( max-width 767px )
      height 86px
      padding 0 20px
      margin 0 -15px
      
    .header-fixed &
      height calc( 144px - 86px )
      
  &__logo
    display flex
    justify-content flex-start
    align-items center
    
    &-aas
      margin-right 20px
      
      @media( min-width 768px )
        width 80px
        height 56px
        transition( top .5s ease )
        position absolute
        top 19px
        left 35px
        z-index 994
      
        .header-fixed &
          top calc( 56px + 19px )
    
  &__slogan
    font-family $roboto
    font-size 9px
    font-weight $bold
    margin 0 37px 0 100px
    
  &__profile
  
    @media( min-width 768px )
      position absolute
      top 22px
      right 35px
      transition( top .5s ease )
      z-index 995
      
      .header-fixed &
        top calc( 56px + 24px )
    
    a
      
      img
        width 50px
        height 50px
        border-radius 50%
        margin-right 20px
        
      span
        font-size $12px
        
    &-icon
      width 24px
      height 24px
      background-repeat no-repeat
      background-position center
      background-size cover
      margin-right 30px
  
  &__bottom
    background-color #fff
    height 50px
    display flex
    justify-content space-between
    align-items center
    transition( all .5s ease )
    position relative
    
    .ph-block--animated &
      opacity 1
    
    .header-fixed &
      height 86px
      
    @media( max-width 767px )
      display none
      height auto
      max-height calc( 100vh - 86px )
      border-bottom none
      overflow scroll
      margin 0 -15px
    
  &__menu
    transition( all .5s ease )
    
    i
      font-style normal
    
    &-item
      display inline-block
      margin-right 30px
      font-family $roboto
      font-weight $bold
      cursor pointer
      
      @media( min-width 768px )
        height 50px
      
      &:last-child
        margin-right 0
        
      &.active
      
        span
      
          a,
          i
            color $secondary-color-2
            
            @media( max-width 767px )
              color $secondary-color
        
      &.open
              
        .b-header__menu-arrow
          transform( rotate(90deg))
          
      @media( min-width 768px )
      
        span
          display inline-block
        
          a,
          i
            display inline-block
            line-height 50px
          
      @media( max-width 767px )
        position relative
        display block
        margin 0 20px
        font-size $20px
      
        &:last-child
          margin-right 20px
        
        span
          display block
          height 60px
          padding 15px 0
          border-bottom 1px solid $line-color
          
          a,
          i
            display inline-block
          
      .header-fixed &
      
        @media( min-width 768px )
          height 86px
          
          span
        
            a,
            i
              line-height 86px
      
        @media( min-width 768px ) and ( max-width 900px )
          display none
          
          &:nth-child(1),
          &:nth-child(2),
          &:nth-child(3)
            display inline-block
            
        @media( min-width 901px ) and ( max-width 991px )
          display none
          
          &:nth-child(1),
          &:nth-child(2),
          &:nth-child(3),
          &:nth-child(4)
            display inline-block
          
    .header-fixed &
      margin-left 100px
      width calc( 100% - 100px - 158px - 50px - 20px - 20px )
          
    &-arrow
      position absolute
      top 18px
      right 10px
      width 12px
      height 24px
      background-repeat no-repeat
      background-position center
      background-size cover
      transition( transform .3s ease )
        
    &-dropdown
      padding 15px 17px
      border-bottom 1px solid $line-color
      display none
      background-color #fff
      
      @media( min-width 768px )
        columns 4
      
      hr
        margin 0
        border none
      
      a,
      i
        display block
        padding 5px 0
        font-weight $normal
        line-height 24px
        
      @media( min-width 767px )
        position absolute
        top 50px
        left 0
        width 100%
        box-shadow 3px 3px 5px #0000000d
        border 1px solid $line-color
        border-top none
        border-radius 0 0 5px 5px
        font-size $14px
        padding 45px 35px
        z-index 994
        
        .header-fixed &
          top 86px
      
        a,
        i
          margin-bottom 30px
          padding 0
          opacity 0
          transition( all .3s ease )
          
        &.show
        
          a,
          i
            opacity 1
          
    .b-header__bottom--search &
      opacity 0
        
    &-icon
      width 24px
      height 24px
      background-repeat no-repeat
      background-position center
      background-size cover
      
  &__search
    position absolute
    top 15px
    left calc( 100% - 20px )
    width 20px
    transition( all .5s ease )
    overflow hidden
    background-color #fff
    z-index 994
        
    .b-header__bottom--search &
      left 0
      width 100%
      
    .header-fixed &
      top 33px
      left calc( 100% - 20px - 158px - 50px )
      
    .header-fixed .b-header__bottom--search &
      left 150px
      width calc( 100% - 100px - 158px - 50px )
    
    input
      display block
      border none
      width 100%
      height 20px
      line-height 20px
      padding 0 0 0 35px
      font-size $14px
      opacity 0
      transition( opacity .5s ease )
      
      &:focus
        border none !important
        outline none
        
      .b-header__bottom--search &
        opacity 1
    
  &__search-icon
    position absolute
    top 0
    left 0
    width 20px
    height 20px
    background-repeat no-repeat
    background-position center
    background-size cover
    z-index 1001
    
  &__cancel-icon
    position absolute
    top 0
    right 0
    width 20px
    height 20px
    background-repeat no-repeat
    background-position center
    background-size cover
    opacity 0
    transition( opacity .5s ease )
    z-index 1000
    
    .b-header__bottom--search &
      opacity 1



.b-footer
  font-family $roboto
  font-size $12px

  &.ph-block--animated
    display block

  &__menu

    a
      display block
      margin-bottom 12px
      line-height 1.2

      &,
      &:hover,
      &:focus,
      &:active
        color #3b3b3b

    b

      a
        font-size $16px
        font-weight $bold

        &,
        &:hover,
        &:focus,
        &:active
          color $link-color