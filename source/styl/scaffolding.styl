.b-header
  height 144px
  transition( height .5s ease-in-out )
  background-color #fff
  
  @media( max-width 767px )
    height 86px

    .body--notifications &.ph-block--animated
      height calc(86px + 70px)
      
  .container-fluid:not(.notification__content)
    position relative
    top 0
    transition( top .5s ease )
    
    @media( min-width 768px )
  
      .header-fixed &
        top calc( -1 * ( 144px - 86px ))
        z-index -1
    
  &.ph-block--animated
    overflow visible
    
    .container-fluid:not(.notification__content):before
      background-color #fff
      z-index -1

    .body--notifications &
      height calc(144px + 70px)
  
      @media( max-width 767px )
        height calc(86px + 70px)
  
  &-fixed-wrapper
    background-color #fff
    transition( all .5s ease )
    position fixed
    top 0
    left 0
    width 100%
    z-index 994

    @media( min-width 768px )
  
      .header-fixed &
        height 86px//144px
  
  &__top
    border-bottom 1px solid $line-color
    height 94px
    display flex
    justify-content space-between
    align-items center
    transition( all .5s ease )
    
    .ph-block--animated &
      opacity 1
  
    @media( max-width 767px )
      height 86px
      padding 0 20px
      margin 0 -15px
      
    .header-fixed &
      height calc( 144px - 86px )
      
  &__logo
    display flex
    justify-content flex-start
    align-items center
    
    &-aas
      margin-right 20px
      
      @media( min-width 768px )
        width 80px
        height 56px
        transition( top .5s ease )
        position absolute
        top 19px
        left 35px
        z-index 994
      
        .header-fixed &
          top calc( 58px + 15px )
    
  &__slogan
    font-family $roboto
    font-size 9px
    font-weight $bold
    margin 0 37px 0 100px
    
  &__profile
    overflow hidden
    padding-left 15px
  
    @media( min-width 768px )
      position absolute
      top 23px
      right 35px
      transition( top .5s ease )
      z-index 995
      
      .header-fixed &
        top calc( 58px + 18px )
        
      .header-fixed:not( .not-authorized ) &.width
        width 50px
    
    a.d-none
      transition( transform .5s ease )
      white-space nowrap

      .header-fixed:not( .not-authorized ) &
        transform( translateX( calc( 100% - 32px )))
      
      i
        display inline-block
        vertical-align middle
        background-bg()
        width 32px
        height 32px
        border-radius 51%
        margin-right 20px
        font-style normal
        
      span
        display inline-block
        vertical-align middle
        font-size $12px
        white-space nowrap
        line-height 50px
        
    &-icon
      width 48px
      height 48px
      background-repeat no-repeat
      background-position center
      background-size 24px
      margin-right 14px
      vertical-align top
  
  &__bottom
    background-color #fff
    height 50px
    display flex
    justify-content space-between
    align-items center
    transition( all .5s ease )
    position relative
    
    .ph-block--animated &
      opacity 1
    
    .header-fixed &
      height 86px
      
    @media( max-width 767px )
      display none
      height auto
      max-height calc( 100vh - 86px )
      border-bottom none
      overflow scroll
      margin 0 -15px
      transition( none )

    [ id^="bx_incl_area" ]

      &:nth-of-type(1)
        width calc( 100% - 20px )

        .b-header__menu
          width 100%
          
      &:nth-of-type(2)
        width 20px
        height 20px
    
  &__menu
    width calc( 100% - 20px )

    @media( max-width 767px )
      width 100%
      padding-bottom 20px
      max-height calc(100vh - 86px)
    
    &.nowrap
      white-space nowrap
      overflow hidden
    
    i
      font-style normal
    
    &-item
      display inline-block
      margin-right 30px
      font-family $roboto
      font-weight $bold
      cursor pointer
      
      &:last-child
        margin-right 0
        
      &.active
      
        span
      
          a,
          i
            color $secondary-color-2
            
            @media( max-width 767px )
              color $secondary-color
      
      @media( min-width 768px )
        height 24px
        margin-top 13px
        margin-bottom 13px
        
        &:hover
          height 50px
          padding-top 13px
          padding-bottom 13px
          margin-top 0
          margin-bottom 0
      
        span
          display inline-block
        
          a,
          i
            display inline-block
            line-height 24px
          
      @media( max-width 767px )
        position relative
        display block
        margin 0 20px
        font-size $20px
        opacity 0
        transform( translateX( 50px ))
        transition( all .5s ease .7s )

        &:nth-child(1)
          transition-delay .1s
        
        &:nth-child(2)
          transition-delay .15s
        
        &:nth-child(3)
          transition-delay .2s
        
        &:nth-child(4)
          transition-delay .25s
        
        &:nth-child(5)
          transition-delay .3s
        
        &:nth-child(6)
          transition-delay .35s
        
        &:nth-child(7)
          transition-delay .4s
      
        &:nth-child(8)
          transition-delay .45s
        
        &:nth-child(9)
          transition-delay .5s
      
        &:last-child
          margin-right 20px
        
        span
          display block
          height 60px
          padding 15px 0
          border-bottom 1px solid $line-color
          
          a,
          i
            display inline-block
    
        .open-sandwich &
          opacity 1
          transform( translateX(0))
          
      .header-fixed &
      
        @media( min-width 768px )
          margin-top 31px
          margin-bottom 31px
          
          &:hover
            height 86px
            padding-top 31px
            padding-bottom 31px
            margin-top 0
            margin-bottom 0
          
    .header-fixed &
      margin-left 100px
      width calc( 100% - 100px - 50px - 20px - 20px )
          
    .header-fixed.not-authorized &
      width calc( 100% - 100px - 158px - 20px - 20px )
          
    &-arrow
      position absolute
      top 22px
      right 10px
      width 16px
      height 16px
      transition( transform .3s ease )
      background-color $form-control-color
      border-radius 5px
      padding 0
      z-index 10

      &:before,
      &:after
        content: ''
        position absolute
        top 3px
        left 8px
        width 0
        height 10px
        border-right 1px solid #73879c
        transition(transform 0.5s ease)

      .b-header__menu-item.open &:before
        transform(rotate(270deg))
      
      &:after
        transform(rotate(90deg))
      
      .b-header__menu-item.open &:after
        transform(rotate(450deg))
        
    &-dropdown
      padding 15px 17px
      border-bottom 1px solid $line-color
      display none
      background-color #fff
      
      hr
        margin 0
        border none
      
      a,
      i
        display block
        padding 5px 0
        font-weight $normal
        line-height 24px

      &__icons

        a
          display flex !important
          align-items center
          padding-left 50px !important
          margin-bottom 0 !important
          background-repeat no-repeat
          background-position left center
          background-size 32px
          min-height 32px
        
      @media( min-width 768px )
        position absolute
        top 50px
        left 0
        width 100%
        box-shadow 3px 3px 5px #0000000d
        border 1px solid $line-color
        border-top none
        border-radius 0 0 5px 5px
        font-size $14px
        padding 35px
        pointer-events none
        opacity 0
        display block
        width calc( ( 100% - 35px * 2 ) / 4 - 30px * 3 / 4 + 35px * 2 )
        z-index 994

        &.wide
          width 100%

        &__wrap
          display flex
          justify-content space-between
          align-items flex-start
          flex-wrap wrap

        &__item
          margin-bottom 20px
        
          a
            display block
            font-size $16px
            font-weight $bold
            margin-bottom 18px

        &__sub

          a
            display block
            font-size $14px
            font-weight $normal
            margin-bottom 8px

        &__column
          width calc( 25% - 30px * 3 / 4 )
          flex-shrink 0

        &__text-column
          width calc( 75% - 30px * 3 / 4 )

          & .b-header__menu-dropdown__wrap:first-of-type
            margin-bottom 20px

          & .b-header__menu-dropdown__wrap:after
            display block
            content ''
            width calc( 100% / 3 - 30px * 2 / 3 )

          & .b-header__menu-dropdown__column
            width calc( 100% / 3 - 30px * 2 / 3 )

        &__icons

          .b-header__menu-dropdown__item
            margin-bottom 0 !important

        &.ready
          pointer-events auto
          opacity 1
          display none

          a:hover
            opacity .7
        
        .header-fixed &
          top 86px
      
        a,
        i
          padding 0
          transition( all .3s ease )

      .b-header__menu-dropdown__b
        display block

        img
          width 100%
          border-radius 5px
          
    .b-header__bottom--search &
      opacity 0
        
    &-icon
      width 48px
      height 48px
      background-repeat no-repeat
      background-position center
      background-size 24px
      margin-right -12px
      vertical-align top
      
  &__search
    position absolute
    top 15px
    left calc( 100% - 20px )
    width 20px
    transition( all .5s ease )
    overflow hidden
    background-color #fff
    z-index 994
        
    .b-header__bottom--search &
      left 0
      width 100%
      
    .header-fixed &
      top 33px
      left calc( 100% - 20px - 50px )
      
      .not-authorized&
        left calc( 100% - 20px - 158px - 20px )
      
    .header-fixed .b-header__bottom--search &
      left 150px
      width calc( 100% - 150px - 50px )
      
      .not-authorized&
        width calc( 100% - 150px - 158px - 20px )
    
    input
      display block
      border none
      width 100%
      height 20px
      line-height 20px
      padding 0 0 0 35px
      font-size $14px
      opacity 0
      transition( opacity .5s ease )
      
      &:focus
        border none !important
        outline none
        
      .b-header__bottom--search &
        opacity 1
    
  &__search-icon
    position absolute
    top 0
    left 0
    width 20px
    height 20px
    background-repeat no-repeat
    background-position center
    background-size cover
    z-index 1001
    
  &__cancel-icon
    position absolute
    top 0
    right 0
    width 20px
    height 20px
    background-repeat no-repeat
    background-position center
    background-size cover
    opacity 0
    transition( opacity .5s ease )
    z-index 1000
    
    .b-header__bottom--search &
      opacity 1

  &__profile-menu
    display none
    position absolute
    top 86px
    left 0
    width 100%
    height calc(100vh - 86px)
    background-color #fff
    overflow auto
    padding-bottom 100px
    z-index 10
    
