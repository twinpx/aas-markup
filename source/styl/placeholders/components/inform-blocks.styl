.b-inform-blocks

  &.ph-block
    position relative
  
  .ph

    &-container
      width 100%
      padding-right 15px
      padding-left 15px
      margin-right auto
      margin-left auto
      display flex
      justify-content space-between
      flex-wrap wrap
      box-sizing border-box

      @media ( min-width 1200px )
        max-width 1480px

      @media ( min-width 768px )
        padding-right 35px
        padding-left 35px
    
      div
        height 400px
        border-radius 10px
        background-color $placeholder-color
        margin-bottom 33px
        width 100%

        @media( min-width 768px )
          width calc( (100% - 30px * 2) / 3 )
          margin-bottom 0
        
    &-content
      position absolute
      top 0
      left 0
      width 100%
      transition( opacity .5s ease )
      opacity 0
      z-index 0