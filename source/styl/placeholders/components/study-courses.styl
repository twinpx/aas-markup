.b-study-courses 

  &.ph-block
    position relative
  
  .ph

    &__title
      max-width 300px
      background-color $placeholder-color
      height 20px
      margin 10px 0 45px

    &__num-blocks
      display flex
      margin-bottom 30px

      @media( max-width 600px )
        justify-content space-between

      div
        background-color $placeholder-color
        border-radius 10px
        margin-right 30px
        width 138px
        height 85px
        flex-shrink 0

        @media( max-width 600px )
          width calc((100% - 15px * 2) / 3)
          margin-right 0
        
    &-content
      position absolute
      top 0
      left 0
      width 100%
      transition( opacity .5s ease )
      opacity 0
      z-index 0