.b-events  

  &.ph-block
    position relative
  
  .ph
    display flex
    justify-content space-between
    flex-wrap wrap
    
    div
      background-color $placeholder-color
      padding-top 30%
      border-radius 10px
      width calc( 100% / 3 - 60px / 3 )
      
      @media( max-width 991px )
        width 100%
        margin-bottom 33px
        padding-top 50%
        
    &-content
      position absolute
      top 0
      left 0
      width 100%
      transition( opacity .5s ease )
      opacity 0
      z-index 0