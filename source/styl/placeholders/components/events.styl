.b-events  

  &.ph-block
    position relative
  
  .ph
    display flex
    justify-content space-between
    flex-wrap wrap
    
    div
      background-color $placeholder-color
      padding-top 30%
      border-radius 10px
      width calc( 100% / 2 - 30px / 2 )
      margin-bottom 33px
      
      @media( max-width 991px )
        width 100%
        margin-bottom 33px
        padding-top 50%

      &:first-child
        width 100%
        height 24px
        border-radius 0
        margin-bottom 40px
        padding-top 0
        
    &-content
      position absolute
      top 0
      left 0
      width 100%
      transition( opacity .5s ease )
      opacity 0
      z-index 0