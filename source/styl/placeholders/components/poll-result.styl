.b-poll-result

  &.ph-block
    position relative
  
  .ph

    &__num-blocks
      display flex
      margin-bottom 30px

      @media( max-width 600px )
        justify-content space-between

      div
        background-color $placeholder-color
        border-radius 10px
        margin-right 30px
        width 138px
        height 85px
        flex-shrink 0

        @media( max-width 600px )
          width calc((100% - 15px * 2) / 3)
          margin-right 0

    &__ill

      div
        height 7px
        background-color $placeholder-color
        margin-bottom 10px

        &:first-child
          height 500px
          border-radius 10px

          @media( max-width 767px )
            height 200px
      
        &:last-child
          width 70%
        
    &-content
      position absolute
      top 0
      left 0
      width 100%
      transition( opacity .5s ease )
      opacity 0
      z-index 1