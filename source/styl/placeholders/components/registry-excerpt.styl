.b-registry-excerpt

  &.ph-block
    position relative
  
  .ph

    &__table

      div
        height 7px
        margin-bottom 15px
        background-color $placeholder-color

        &:last-child
          width 70%
  
    &-content
      position absolute
      top 0
      left 0
      width 100%
      transition( opacity .5s ease )
      opacity 0
      z-index 1