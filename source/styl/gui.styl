body
  background #fff
  font-family $open-sans
  font-size 16px
  color #3b3b3b
  
.container-fluid

  @media ( min-width 1200px )
    max-width 1480px

  @media ( min-width 768px )
    padding-right 35px
    padding-left 35px
  
a
  transition( all .5s ease )

  &,
  &:hover,
  &:focus,
  &:active
    color #06417c
    text-decoration none
    
  &:hover
    opacity .7
    
hr
  margin-top 1rem
  margin-bottom 1rem
  border-top 1px solid transparent
  
  &.hr--xs
    margin-top .25rem
    margin-bottom .25rem
  
  &.hr--sm
    margin-top .5rem
    margin-bottom .5rem
  
  &.hr--md
    margin-top 1rem
    margin-bottom 1rem
  
  &.hr--lg
    margin-top 1.5rem
    margin-bottom 1.5rem
  
  &.hr--xl
    margin-top 2rem
    margin-bottom 2rem
    
  &.hr--line
    border-top 1px solid #eee
  
h1
  font-family $roboto
  font-size $38px
  font-weight $bold
  margin-bottom 3rem
  
  &:first-child
    margin-top 0
  
.btn
  font-family $roboto
  font-weight $bold
  font-size $12px
  line-height 38px
  height 38px
  border-radius 7px
  padding-top 0
  padding-bottom 0
  min-width 158px
  transition( all .5s ease )
    
  &:hover
    opacity .7
  
  &-primary
    
    &,
    &:hover,
    &.focus,
    &:focus,
    &.disabled,
    &:disabled
      background-color $primary-color
      border-color $primary-color
      
    &.focus,
    &:focus
      box-shadow none

    &:not(:disabled):not(.disabled)

      &.active,
      &:active
        background-color $primary-color
        border-color $primary-color

        &:focus
          box-shadow none
      
  &-secondary
    
    &,
    &:hover,
    &.focus,
    &:focus,
    &.disabled,
    &:disabled
      background-color $secondary-color
      border-color $secondary-color
      
    &.focus,
    &:focus
      box-shadow none

    &:not(:disabled):not(.disabled)

      &.active,
      &:active
        background-color $secondary-color
        border-color $secondary-color

        &:focus
          box-shadow none
  
  &-light
    
    &,
    &:hover,
    &.focus,
    &:focus,
    &.disabled,
    &:disabled
      color $primary-color
      background-color #f0f0f0
      border-color #f0f0f0
      
    &.focus,
    &:focus
      box-shadow none

    &:not(:disabled):not(.disabled)

      &.active,
      &:active
        color $primary-color
        background-color #f0f0f0
        border-color #f0f0f0

        &:focus
          box-shadow none
    
  &-lg
    line-height 60px
    height 60px
    font-size $16px
    min-width 250px