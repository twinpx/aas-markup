html,
body
  height 100%

body
  background #fff
  font-family $open-sans
  font-size 16px
  color #3b3b3b
  display flex
  flex-direction column
  height 100%

.b-page-content
  flex 1 0 auto

.b-footer
  flex 0 0 auto

.b-bg
  background-color #fafafa
  border-top 1px solid #fafafa
  border-bottom 1px solid #fafafa
  
.container-fluid

  @media ( min-width 1200px )
    max-width 1480px

  @media ( min-width 768px )
    padding-right 35px
    padding-left 35px
  
a
  transition( all .5s ease )

  &,
  &:hover,
  &:focus,
  &:active
    color $link-color
    text-decoration none
    
  &:hover
    opacity .7

small,
.small
  font-size $12px
  line-height 14px

p, dl, ol, ul
  margin-bottom 1.25rem

dl, ol, ul
  padding-left 3rem

li
  margin-bottom 1rem

blockquote
  margin 0 0 1.25rem 3rem
  border-left 2px solid $primary-color
  padding-left 20px
  color #000

.b-lead
  font-size $24px
  margin 1.25rem 0
  
  @media( max-width 575px )
    font-size 1.2rem

hr
  margin-top 1rem
  margin-bottom 1rem
  border-top 1px solid transparent !important
  
  &.hr--xs
    margin-top .25rem
    margin-bottom .25rem
  
  &.hr--sm
    margin-top .5rem
    margin-bottom .5rem
  
  &.hr--md
    margin-top .75rem
    margin-bottom .75rem
  
  &.hr--lg
    margin-top 1.5rem
    margin-bottom 1.5rem
  
  &.hr--xl
    margin-top 2rem
    margin-bottom 2rem
    
  &.hr--line
    border-top 1px solid #eee !important
  
h1
  font-family $roboto
  font-size $38px
  font-weight $bold
  line-height 1.18//44
  margin 0 0 3rem
  overflow visible
  height auto

  &.ph-block--animated
    color #3b3b3b
    
    &:after
      background-color transparent
      width auto
      opacity 0
      pointer-events none

h2
  font-family $roboto
  font-size $32px
  font-weight $bold
  line-height 1.25//40
  margin 0 0 2rem
  overflow visible
  height auto
  
  @media( max-width 575px )
    font-size 1.2rem

h3
  font-family $roboto
  font-size $24px
  font-weight $bold
  line-height 1.5//36
  margin 0 0 2rem
  overflow visible
  height auto

h4
  font-family $roboto
  font-size $18px
  font-weight $bold
  line-height 21px
  margin 0 0 10px
  
.btn
  font-family $roboto
  font-weight $bold
  font-size $12px
  line-height 38px
  height 38px
  border-radius 7px
  padding-top 0
  padding-bottom 0
  min-width 158px
  transition( all .5s ease )
    
  &:hover
    opacity .7
  
  &-primary
    
    &,
    &:hover,
    &.focus,
    &:focus,
    &.disabled,
    &:disabled
      background-color $primary-color
      border-color $primary-color
      
    &.focus,
    &:focus
      box-shadow none

    &:not(:disabled):not(.disabled)

      &.active,
      &:active
        background-color $primary-color
        border-color $primary-color

        &:focus
          box-shadow none
      
  &-secondary
    
    &,
    &:hover,
    &.focus,
    &:focus,
    &.disabled,
    &:disabled
      background-color $secondary-color
      border-color $secondary-color
      
    &.focus,
    &:focus
      box-shadow none

    &:not(:disabled):not(.disabled)

      &.active,
      &:active
        background-color $secondary-color
        border-color $secondary-color

        &:focus
          box-shadow none
  
  &-light
    
    &,
    &:hover,
    &.focus,
    &:focus,
    &.disabled,
    &:disabled
      color $primary-color
      background-color #f0f0f0
      border-color #f0f0f0
      
    &.focus,
    &:focus
      box-shadow none

    &:not(:disabled):not(.disabled)

      &.active,
      &:active
        color $primary-color
        background-color #f0f0f0
        border-color #f0f0f0

        &:focus
          box-shadow none
    
  &-lg
    line-height 60px
    height 60px
    font-size $16px
    min-width 250px

.table thead th
  border-bottom 1px solid $line-color
  font-family $roboto
  font-weight $bold
  font-size $20px

.table td, .table th
  padding 1.25rem 1.5rem
  border-top-color $line-color
  
.text-muted
  color #9b9b9b !important
